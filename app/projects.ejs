<!DOCTYPE html>
<html lang='en'>
<head>
    <% include _partials/header.ejs %>
    <link rel='stylesheet' href='/css/project.css'>
    <script type='text/javascript' src='/javascript/project.js'></script>
</head>
<body ng-app=''>
    <% include _partials/navbar.ejs %>
    <main>
        <div class="row">
          <div class="col-lg-3 col-lg-offset-3">
            <ul class="nav nav-pills">
              <li class="active"><a href="#">Most recent</a></li>
              <li><a href="#">Most popular</a></li>
              <li><a href="#">Most commented</a></li>
            </ul>
          </div>

        <div class="col-lg-5  ">
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </div>

        <div class='row'>
          <aside class="col-lg-2 col-md-3 col-sm-3">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#add-project-modal">
              Add project
            </button>
          </aside>
          <div class="col-lg-9 col-lg-offset-1 col-md-9 col-sm-9">
            <ul id='project-list' class='list-unstyled'>
              <% projects.forEach(function (project) { %>
                <li id="project-<%= project._id %>">
                  <h1><a href='/projects/<%= project._id %>'><%= project.name %></a> <small><small>[<a data-toggle="modal" href="#delete-project-modal" data-id="<%= project._id %>">Delete</a> | <a href="#">Edit</a>]</small></small></h1>
                  <% if (typeof project.content != 'undefined') { %>
                    <p><%= project.content.substring(0,50) %> ... <br> <a href='/projects/<%= project._id %>'>READ MORE <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a> </p>
                  <% } %>
                  <img class='img-responsive' src='<%= project.image %>'>

                </li>
              <% }); %>
            </ul>
          </div>
        </div>
    </main>
    <% include _partials/delete-project-modal.ejs %>
    <% include _partials/add-project-modal.ejs %>
    <div class='spinner'></div>
</body>
</html>
