<div class="modal fade" id="add-project-modal" tabindex="-1" role="dialog" aria-labelledby="add-project-label" aria-hidden="true">
  <div class="modal-dialog">
    <form id='add-project-form' method='post' action='/api/projects' enctype='multipart/form-data'>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="add-project-label">Add project</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
              <label for="project-name" class="control-label">Name:</label>
              <input id="project-name" type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
              <label for="project-text" class="control-label">Content:</label>
              <textarea id="project-text" class="form-control" name="content"></textarea>
            </div>
            <div class="form-group">
              <label for="project-image" class="control-label">Image:</label>
              <div class="input-group">
                  <span class="input-group-btn">
                      <span class="btn btn-primary btn-file">
                          Browse&hellip; <input id='upload-project-image' type="file">
                      </span>
                  </span>
                  <input type="text" id="file-name" class="form-control" readonly>
              </div>
            </div>
            <div class="form-group">
              <img id='preview-project' class='img-responsive hidden' src='#' alt='Preview'>
              <input type='hidden' id='image-base64' name='base64'>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary hidden" id="crop-btn">Crop</button>
          <button type="submit" class="btn btn-primary " id="save-btn">Save changes</button>
        </div>
      </div>
    </form>
  </div>
</div>
