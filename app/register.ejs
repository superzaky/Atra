<!DOCTYPE html>
<html lang="en">
<head>
    <% include _partials/header.ejs %>
    <script type='text/javascript' src='/javascript/register.js'></script>
</head>
<body ng-app=''>
    <% include _partials/navbar.ejs %>
    <main>
        <h1>Register</h1>
        <form id='register-form' method='post' action='/api/users'>
            <div class='input-group'>
                <span class='input-group-addon'><span class='glyphicon glyphicon-user'></span></span>
                <input class='form-control' type='text' name='email' placeholder='Email' required='true'>
            </div>

            <span class='help-block'></span>

            <div class='input-group'>
                <span class='input-group-addon'><span class='glyphicon glyphicon-lock'></span></span>
                <input class='form-control' type='password' name='password' placeholder='Password' required='true'>
            </div>

            <span class='help-block'></span>

            <div class='input-group'>
                <span class='input-group-addon'><span class='glyphicon glyphicon-pencil'></span></span>
                <input class='form-control' type='text' name='first_name' placeholder='First name' required='true'>
            </div>

            <span class='help-block'></span>

            <div class='input-group'>
                <span class='input-group-addon'><span class='glyphicon glyphicon-pencil'></span></span>
                <input class='form-control' type='text' name='last_name' placeholder='Last name' required='true'>
            </div>

            <span class='help-block'></span>

            <button type='submit' class='btn btn-primary'><i class='fa fa-user-plus'></i> Register</button>
        </form>
    </main>
</body>     
</html>
