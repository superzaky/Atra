<!DOCTYPE html>
<html lang='en'>
<head>
    <% include _partials/header.ejs %>
    <script type='text/javascript' src='/javascript/project.js'></script>
</head>
<body ng-app=''>
    <% include _partials/navbar.ejs %>
    <main>
        <div class="row">
          <div class="col-lg-3 col-lg-offset-3">
            <ul class="nav nav-pills">
              <li class="active"><a href="#">Most recent</a></li>
              <li><a href="#">Most popular</a></li>
              <li><a href="#">Most commented</a></li>
            </ul>
          </div>

        <div class="col-lg-5  ">
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </div>

        <div class='row'>
          
            <aside class="col-lg-2 col-md-3 col-sm-3">
              <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#project-modal">
                Add project
              </button> 
            </aside>
    

          <div class="col-lg-9 col-lg-offset-1 col-md-9 col-sm-9 current-projects">
            <ul class='list-unstyled'>
              <% projects.forEach(function (project) { %>                
                <li>
                  <div class="text-right">
                      <a data-toggle="modal" href="#deleteModal<%- project._id %>">Delete</a> |
                      <a href="#">Edit</a>
                  </div>
                  <h1><a href='projects/<%= project._id %>'><%= project.name %></a></h1>
                  <p><%- project.content %></p>
                  <p hidden> data-project-id='<%- project.id %>'</p>
                  <img class='img-responsive' src='<%= project.image %>'> 
                </li>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal<%- project._id %>"
                     tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Are you sure?</h4>
                                </div>
                                <div class="modal-body">
                                  Are you sure you want to remove this project?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        <a href="/api/projects/<%- project._id %>" class="btn btn-danger">
                                            <span class="glyphicon glyphicon-remove"></span>Remove project
                                        </a>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
              <% }); %>
            </ul>
          </div>
        </div>
    </main>
    

    

    <% include _partials/project-modal.ejs %>
</body>
</html>
